@rendermode InteractiveServer

<header class="bg-white shadow-md fixed top-0 left-0 right-0 z-50">
    <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
        <!-- Logo -->
        <NavLink href="#domu" class="flex items-center gap-2 text-gray-800">
            <img src="media/brand/logo.svg" alt="Logo" class="h-10 w-auto" />
            <span class="text-2xl font-bold hidden lg:inline">Sádrokartony Trmota</span>
        </NavLink>

        <!-- Hamburger (mobilní spouštěč) -->
        <button @onclick="ToggleMenu" class="lg:hidden block text-gray-800" aria-label="Menu toggle">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
                 viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>

        <!-- Desktop menu -->
        <nav class="hidden lg:flex lg:flex-row lg:items-center lg:ml-auto lg:space-x-8">
            <NavLink href="#domu" class="text-gray-800 hover:text-yellow-500 transition">Domů</NavLink>
            <NavLink href="#o-mne" class="text-gray-800 hover:text-yellow-500 transition">O mně</NavLink>
            <NavLink href="#sluzby" class="text-gray-800 hover:text-yellow-500 transition">Služby</NavLink>
            <NavLink href="#kontakt" class="text-gray-800 hover:text-yellow-500 transition">Kontakt</NavLink>
            <NavLink href="#faq" class="text-gray-800 hover:text-yellow-500 transition">FAQ</NavLink>
            <NavLink href="#galerie" class="text-gray-800 hover:text-yellow-500 transition">Galerie</NavLink>
        </nav>
    </div>
</header>

<!-- Fullscreen mobilní menu -->
@if (isMenuOpen)
{
    <div class="fixed inset-0 bg-white z-50 flex flex-col items-center justify-center gap-6 text-xl font-medium transition-all duration-300 lg:hidden">
        <!-- Zavírací křížek -->
        <button @onclick="CloseMenu" aria-label="Zavřít menu"
                class="absolute top-4 right-4 text-gray-800 hover:text-red-500 transition">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2"
                 viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                <path d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>

        <!-- Navigace -->
        <NavLink href="#domu" @onclick="CloseMenu" class="hover:text-yellow-500">Domů</NavLink>
        <NavLink href="#o-mne" @onclick="CloseMenu" class="hover:text-yellow-500">O mně</NavLink>
        <NavLink href="#sluzby" @onclick="CloseMenu" class="hover:text-yellow-500">Služby</NavLink>
        <NavLink href="#kontakt" @onclick="CloseMenu" class="hover:text-yellow-500">Kontakt</NavLink>
        <NavLink href="#faq" @onclick="CloseMenu" class="hover:text-yellow-500">FAQ</NavLink>
        <NavLink href="#galerie" @onclick="CloseMenu" class="hover:text-yellow-500">Galerie</NavLink>
    </div>
}


@code {
    private bool isMenuOpen = false;

    private void ToggleMenu() => isMenuOpen = !isMenuOpen;
    private void CloseMenu() => isMenuOpen = false;

    private string NavClasses =>
    $"{(isMenuOpen ? "flex" : "hidden")} flex-col lg:flex lg:flex-row lg:items-center absolute lg:static bg-white lg:bg-transparent w-full left-0 top-full lg:w-auto lg:space-x-8 p-4 lg:p-0 shadow-md lg:shadow-none z-40";

}


