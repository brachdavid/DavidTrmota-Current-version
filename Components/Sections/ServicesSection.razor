<section id="sluzby" class="scroll-mt-12 relative py-12 bg-gray-200 text-gray-900">
    <div class="max-w-7xl mx-auto px-6 sm:px-10 lg:px-16">
        <div class="mb-10 text-center">
            <h2 class="text-4xl sm:text-5xl font-extrabold text-gray-800 mb-3">Poskytované služby</h2>
            <div class="mx-auto w-20 h-1 bg-yellow-500 rounded"></div>
            <p class="text-lg sm:text-xl text-gray-600 mt-3">Kvalitní sádrokartonářské práce od příček až po půdní vestavby</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var service in services)
            {
                <div class="relative bg-white rounded-xl shadow-md p-6 transition hover:shadow-xl ring-1 ring-gray-200 overflow-hidden">
                    <!-- Srpek měsíce -->
                    <div class="absolute -top-6 -right-6 w-20 h-20 bg-yellow-400 rounded-full z-0"></div>

                    <!-- Obsah -->
                    <div class="relative z-10 mb-4 text-yellow-500">
                        <div class="inline-block bg-yellow-100 rounded-full p-3 shadow-inner">
                            @service.Icon
                        </div>
                    </div>

                    <h3 class="text-xl font-bold mb-2 relative z-10">@service.Title</h3>
                    <p class="text-gray-800 relative z-10">@service.Description</p>
                </div>

            }
        </div>
    </div>
</section>

