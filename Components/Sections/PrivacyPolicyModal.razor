<button type="button" href="#" class="@LinkClass no-underline decoration-yellow-500 hover:text-yellow-600 transition" @onclick="OpenModal">@Text</button>

@if (IsModalOpen)
{
    <div class="fixed inset-0 bg-black/50 flex items-center justify-center px-4 sm:px-6 z-100" @onclick="CloseModal">
        <div class="bg-white w-full max-w-4xl max-h-[75vh] md:max-h-[70vh] rounded-2xl shadow-xl overflow-hidden relative flex flex-col">

            <!-- Sticky header -->
            <div class="flex justify-between items-center bg-white px-6 py-4 sticky top-0 z-10 shadow-sm border-b border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900">Zásady ochrany osobních údajů</h2>
                <button @onclick="CloseModal" class="text-gray-500 hover:text-black transition rounded-full p-1 focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Scrollable content -->
            <div class="overflow-y-auto px-6 py-4 text-gray-800 text-base leading-relaxed">
                <PrivacyPolicy />
            </div>

            <!-- Sticky footer -->
            <div class="bg-white px-6 py-3 text-right border-t border-gray-200">
                <button @onclick="CloseModal" class="px-4 py-2 bg-yellow-500 hover:bg-yellow-600 rounded-lg text-sm font-medium transition text-black">
                    Zavřít
                </button>
            </div>

        </div>
    </div>
}

@code {
    [Parameter] public string Text { get; set; } = "Zásady ochrany osobních údajů";
    [Parameter] public string LinkClass { get; set; } = "text-yellow-500 font-medium";

    private bool IsModalOpen = false;

    private void OpenModal() => IsModalOpen = true;
    private void CloseModal() => IsModalOpen = false;
}
