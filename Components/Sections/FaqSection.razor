@rendermode InteractiveServer

<section id="faq" class="scroll-mt-12 relative py-12 bg-gray-200 text-gray-900">
    <div class="max-w-4xl mx-auto px-6 sm:px-10 lg:px-16">
        <div class="text-center mb-12">
            <h2 class="text-4xl sm:text-5xl font-extrabold mb-4">Často kladené dotazy</h2>
            <div class="mx-auto w-20 h-1 bg-yellow-500 rounded"></div>
            <p class="text-lg sm:text-xl text-gray-600 mt-3">Vše, co by vás mohlo zajímat před spoluprací</p>
        </div>

        <div class="space-y-6">
            @for (int i = 0; i < FaqItems.Count; i++)
            {
                var localIndex = i;
                var item = FaqItems[i];

                <div class="border border-gray-200 rounded-xl shadow-sm bg-gray-50 overflow-hidden transition-all duration-300">
                    <button class="w-full text-left px-6 py-5 text-lg font-semibold flex justify-between items-center hover:text-yellow-600"
                            @onclick="@(() => Toggle(localIndex))">
                        <span>@item.Question</span>
                        <svg class="w-5 h-5 transform transition-transform duration-300"
                             style="@((ActiveIndex == localIndex) ? "rotate(180deg)" : "")"
                             xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>

                    @if (ActiveIndex == localIndex)
                    {
                        <div class="px-6 pb-6 text-gray-700 text-base">
                            @item.Answer
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</section>

@code {
    private int? ActiveIndex = null;

    private void Toggle(int index)
    {
        ActiveIndex = (ActiveIndex == index) ? null : index;
    }

