<section id="kontakt" class="py-12 bg-white text-gray-900">
    <div class="max-w-6xl mx-auto px-6 sm:px-8">
        <div class="text-center mb-12">
            <h2 class="text-4xl sm:text-5xl font-extrabold mb-4">Kontaktujte mě</h2>
            <div class="mx-auto w-20 h-1 bg-yellow-500 rounded"></div>
            <p class="text-lg sm:text-xl text-gray-600 mt-3">Máte nějaké otázky? Rád vám na ně odpovím</p>
        </div>
        <!-- Akční kontakty + Mapa -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 mb-24">
            <!-- Akční kontaktní tlačítka -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                @foreach (var item in ActionItems)
                {
                    <a href="@item.Href" class="group bg-gray-100 hover:bg-yellow-100 transition rounded-2xl p-6 flex flex-col items-center justify-center shadow-sm ring-1 ring-gray-200">
                        <div class="bg-yellow-500 group-hover:bg-yellow-600 text-white p-3 rounded-full mb-4 transition">
                            @item.Icon
                        </div>
                        <p class="text-base sm:text-lg font-semibold text-gray-900">@item.Label</p>
                        <p class="text-sm sm:text-base text-gray-700 break-words text-center font-medium">@item.Text</p>
                    </a>
                }
            </div>

            <!-- Google Mapa -->
            <div class="rounded-2xl overflow-hidden shadow-md ring-1 ring-gray-200 h-full">
                <iframe title="Mapa - David Trmota"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2611.0294894825442!2d13.517394912074387!3d49.38051727128845!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x470ad708f012d3d9%3A0x4a65ee3e262eb0d2!2sDavid%20Trmota!5e1!3m2!1scs!2scz!4v1732793143474!5m2!1scs!2scz"
                        class="w-full h-full min-h-[320px]"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>

        <!-- Kontakt: zvýrazněný kontrastní formulář -->
        <div class="relative max-w-3xl mx-auto">
            <!-- Žluté pozadí za formulářem -->
            <div class="absolute -inset-1 bg-yellow-400 rounded-3xl -rotate-8 z-0 shadow-xl"></div>

            <!-- Formulářový box -->
            <div class="relative p-10 sm:p-12 bg-gray-900 text-white rounded-2xl shadow-2xl z-10 mb-12">
                <h2 class="text-3xl sm:text-4xl font-bold mb-8 leading-tight">
                    <span class="text-yellow-400">Zanechte zprávu</span> <span class="text-white">a já se vám co nejdříve ozvu.</span>
                </h2>

                <form class="space-y-6">
                    <div>
                        <label class="block font-semibold text-base text-yellow-300 mb-1">Jméno a příjmení*</label>
                        <input type="text" class="w-full px-4 py-3 border border-gray-700 bg-gray-800 text-white rounded-md focus:ring-2 focus:ring-yellow-400 outline-none" />
                    </div>

                    <div>
                        <label class="block font-semibold text-base text-yellow-300 mb-1">E-mail*</label>
                        <input type="email" class="w-full px-4 py-3 border border-gray-700 bg-gray-800 text-white rounded-md focus:ring-2 focus:ring-yellow-400 outline-none" />
                    </div>

                    <div>
                        <label class="block font-semibold text-base text-yellow-300 mb-1">Telefon</label>
                        <input type="tel" class="w-full px-4 py-3 border border-gray-700 bg-gray-800 text-white rounded-md focus:ring-2 focus:ring-yellow-400 outline-none" />
                    </div>

                    <div>
                        <label class="block font-semibold text-base text-yellow-300 mb-1">Zpráva*</label>
                        <textarea rows="4" class="w-full px-4 py-3 border border-gray-700 bg-gray-800 text-white rounded-md focus:ring-2 focus:ring-yellow-400 outline-none resize-none"></textarea>
                    </div>

                    <button type="submit" class="w-full py-3 bg-yellow-400 hover:bg-yellow-500 text-black font-semibold rounded-md transition">
                        Odeslat zprávu
                    </button>
                </form>
            </div>
        </div>


    </div>
</section>

